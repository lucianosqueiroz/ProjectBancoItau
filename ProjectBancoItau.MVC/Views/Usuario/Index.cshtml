@model IEnumerable<ProjectBancoItau.MVC.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo usuário", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gerente)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gerente)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>*@
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdUsuario }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdUsuario }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.IdUsuario })
        </td>
    </tr>
}

</table>
